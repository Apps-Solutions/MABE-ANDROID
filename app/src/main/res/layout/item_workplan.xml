<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    android:layout_width    ="match_parent"
    android:layout_height   ="wrap_content"
    android:orientation     ="vertical"
    android:background      ="@color/light_gray"
    android:gravity         ="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id              ="@+id/relativelayout_number"
            android:layout_width    ="wrap_content"
            android:layout_weight="0"
            android:layout_height   ="match_parent"
            android:orientation="vertical">

            <TextView
                android:id                  ="@+id/txv_clients_preview_num"
                android:layout_width        ="40dp"
                android:layout_height       ="match_parent"
                android:textAppearance      ="?android:attr/textAppearanceLarge"
                android:background          ="@color/sic_indig"
                android:text                =" 00 "
                android:textColor           ="@color/black_gray"
                android:textStyle           ="bold"
                android:gravity             ="center"/>

        </LinearLayout>

        <LinearLayout
            android:id              ="@+id/tableL_data"
            android:layout_width    ="match_parent"
            android:layout_weight="1"
            android:layout_height   ="wrap_content"
            android:background      ="@color/sic_indig"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            >

            <LinearLayout
                android:layout_height       ="match_parent"
                android:layout_width        ="match_parent"
                android:layout_marginBottom ="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_weight       ="27"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:text                ="@string/wp_item_customer"
                    android:textColor           ="@color/black_gray"
                    android:textStyle           ="bold"
                    android:textSize            ="16dp"/>

                <TextView
                    android:id                  ="@+id/txt_pdv_name"
                    android:layout_width        ="0dp"
                    android:layout_height       ="wrap_content"
                    android:layout_marginLeft  ="5dp"
                    android:layout_weight="73"
                    android:text                =""
                    android:textColor           ="@color/black_gray"
                    android:textSize            ="16dp"
                    android:layout_marginRight  ="2dp"
                    android:gravity             ="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height       ="match_parent"
                android:layout_width        ="match_parent"
                android:layout_marginBottom ="5dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_weight       ="27"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:layout_marginRight  ="5dp"
                    android:text                ="@string/wp_item_hour"
                    android:textColor           ="@color/black_gray"
                    android:textStyle           ="bold"
                    android:textSize            ="16dp"/>

                <TextView
                    android:id                  ="@+id/txt_pdv_time"
                    android:layout_weight       ="73"
                    android:layout_width        ="0dp"
                    android:layout_height       ="wrap_content"
                    android:text                ="mis item´s"
                    android:textColor           ="@color/black_gray"
                    android:textSize            ="16dp"
                    android:layout_marginRight  ="2dp"
                    android:gravity             ="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height   ="match_parent"
                android:layout_width    ="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_weight       ="27"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:layout_marginRight  ="5dp"
                    android:text                ="@string/wp_item_status"
                    android:textColor           ="@color/black_gray"
                    android:textStyle           ="bold"
                    android:textSize            ="16dp"/>

                <TextView
                    android:id                  ="@+id/txt_pdv_status"
                    android:layout_weight       ="73"
                    android:layout_width        ="0dp"
                    android:layout_height       ="wrap_content"
                    android:text                ="mis item´s"
                    android:textColor           ="@color/black_gray"
                    android:textSize            ="16dp"
                    android:layout_marginRight  ="2dp"
                    android:gravity             ="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height   ="match_parent"
                android:layout_width    ="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_weight       ="27"
                    android:layout_width        ="0dp"
                    android:layout_height       ="wrap_content"
                    android:layout_marginRight  ="5dp"
                    android:text                ="# Orden Servicio:"
                    android:textColor           ="@color/black_gray"
                    android:textStyle           ="bold"
                    android:textSize            ="16dp"/>

                <TextView
                    android:id                  ="@+id/txt_num_order"
                    android:layout_weight       ="73"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:text                ="5432"
                    android:textColor           ="@color/black_gray"
                    android:textSize            ="16dp"
                    android:layout_marginRight  ="2dp"
                    android:gravity             ="center"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"/>


</LinearLayout>